#header
  #welcome
    - if current_user
      #{t :welcome},
      -# This span gets updated on the fly if user changes her name.
      %span#welcome_username= current_user.username
      %span> !&nbsp;&nbsp;
    
      = link_to(t(:profile), profile_path) << " |"
      - if current_user.role? :admin
        = link_to(t(:admin), admin_path) << " |"
      = link_to(t(:logout), logout_path)
    - else
      = link_to(t(:login), login_path) << " |"
      / = link_to(t(:sign_up), signup_path) << " |"
      = link_to(t(:about), "#", :title => t(:about_ds))
  %h3
    = link_to("DaySheet", root_path)